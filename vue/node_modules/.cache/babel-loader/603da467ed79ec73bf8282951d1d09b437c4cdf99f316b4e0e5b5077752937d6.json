 style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n            <div style=\"flex: 1\">\r\n              <div style=\"color: #666; margin-bottom: 10px\">{{ sub.userName }} <span style=\"color: #333\" v-if=\"sub.replyUser !== item.userName\">回复  {{ sub.replyUser }}</span></div>\r\n              <div style=\"color: #444; margin-bottom: 10px\">{{ sub.content }}</div>\r\n              <div style=\"color: #888; font-size: 13px;margin-bottom: 10px\"><span style=\"margin-right: 20px\">{{ sub.time }}</span>\r\n                <span style=\"cursor: pointer;\" :class=\"{'comment-active': sub.showReplyInput }\" @click=\"handleShowshowReplyInput(sub)\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n              </div>\r\n              <div v-if=\"sub.showReplyInput\">\r\n                <el-input type=\"textarea\" placeholder=\"请输入回复内容\" v-model=\"sub.replyContent\"></el-input>\r\n                <div style=\"text-align: right;margin-top: 5px\">\r\n                  <el-button type=\"primary\" @click=\"addReplay(sub)\">回 复</el-button>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n  </div>\r\n  <!--  评论结束  -->\r\n\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"CommentComponent\",\r\n  props:{\r\n    fid:null,\r\n    module:null\r\n  },\r\n  data(){\r\n    return{\r\n      commentCount: 0,\r\n      commentContent: '',\r\n      commentList: []\r\n    }\r\n  },\r\n  created() {\r\n    this.loadComment()\r\n  },methods:{\r\n    loadComment() {\r\n      this.$request.get('/comment/selectForUser', {\r\n        params: {  fid: this.fid, module: this.module }\r\n      }).then(res => {\r\n        this.commentList = res.data || []\r\n      })\r\n      this.$request.get('/comment/selectCount',{\r\n        params: {  fid: this.fid, module: this.module }\r\n      }).then(res => {\r\n        this.commentCount = res.data || 0\r\n      })\r\n    },\r\n    handleShowshowReplyInput(item){\r\n      this.$set(item,'showReplyInput',!item.showReplyInput)\r\n    },\r\n    addReplay(item){\r\n      this.$request.post('/comment/add', { content: item.replyContent, rootId:item.rootId,fid: this.fid, module: this.module,pid:item.id }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success('操作成功')\r\n          item.replyContent=''\r\n          this.loadComment()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    addComment() {\r\n      this.$request.post('/comment/add', { content: this.commentContent, fid: this.fid, module: this.module }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success('操作成功')\r\n          this.commentContent = ''\r\n          this.loadComment()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n\r\n</style>"],"mappings":"AA0DA;EACAA,IAAA;EACAC,KAAA;IACAC,GAAA;IACAC,MAAA;EACA;EACAC,KAAA;IACA;MACAC,YAAA;MACAC,cAAA;MACAC,WAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,WAAA;EACA;EAAAC,OAAA;IACAD,YAAA;MACA,KAAAE,QAAA,CAAAC,GAAA;QACAC,MAAA;UAAAX,GAAA,OAAAA,GAAA;UAAAC,MAAA,OAAAA;QAAA;MACA,GAAAW,IAAA,CAAAC,GAAA;QACA,KAAAR,WAAA,GAAAQ,GAAA,CAAAX,IAAA;MACA;MACA,KAAAO,QAAA,CAAAC,GAAA;QACAC,MAAA;UAAAX,GAAA,OAAAA,GAAA;UAAAC,MAAA,OAAAA;QAAA;MACA,GAAAW,IAAA,CAAAC,GAAA;QACA,KAAAV,YAAA,GAAAU,GAAA,CAAAX,IAAA;MACA;IACA;IACAY,yBAAAC,IAAA;MACA,KAAAC,IAAA,CAAAD,IAAA,qBAAAA,IAAA,CAAAE,cAAA;IACA;IACAC,UAAAH,IAAA;MACA,KAAAN,QAAA,CAAAU,IAAA;QAAAC,OAAA,EAAAL,IAAA,CAAAM,YAAA;QAAAC,MAAA,EAAAP,IAAA,CAAAO,MAAA;QAAAtB,GAAA,OAAAA,GAAA;QAAAC,MAAA,OAAAA,MAAA;QAAAsB,GAAA,EAAAR,IAAA,CAAAS;MAAA,GAAAZ,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAY,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACAZ,IAAA,CAAAM,YAAA;UACA,KAAAd,WAAA;QACA;MACA;IACA;;IACAqB,WAAA;MACA,KAAAnB,QAAA,CAAAU,IAAA;QAAAC,OAAA,OAAAhB,cAAA;QAAAJ,GAAA,OAAAA,GAAA;QAAAC,MAAA,OAAAA;MAAA,GAAAW,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAY,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACA,KAAAvB,cAAA;UACA,KAAAG,WAAA;QACA;MACA;IACA;EAEA;AA