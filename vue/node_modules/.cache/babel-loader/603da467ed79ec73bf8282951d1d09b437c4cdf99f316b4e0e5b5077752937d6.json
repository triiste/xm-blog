{"ast":null,"code":"export default {\n  name: \"CommentComponent\",\n  props: {\n    fid: null,\n    module: null\n  },\n  data() {\n    return {\n      commentCount: 0,\n      commentContent: '',\n      commentList: []\n    };\n  },\n  created() {\n    this.loadComment();\n  },\n  methods: {\n    loadComment() {\n      this.$request.get('/comment/selectForUser', {\n        params: {\n          fid: this.fid,\n          module: this.module\n        }\n      }).then(res => {\n        this.commentList = res.data || [];\n      });\n      this.$request.get('/comment/selectCount', {\n        params: {\n          fid: this.fid,\n          module: this.module\n        }\n      }).then(res => {\n        this.commentCount = res.data || 0;\n      });\n    },\n    handleShowshowReplyInput(item) {\n      this.$set(item, 'showReplyInput', !item.showReplyInput);\n    },\n    addReplay(item) {\n      this.$request.post('/comment/add', {\n        content: item.replyContent,\n        rootId: item.rootId,\n        fid: this.fid,\n        module: this.module,\n        pid: item.id\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          item.replyContent = '';\n          this.loadComment(); // 重新加载数据\n        }\n      });\n    },\n\n    addComment() {\n      this.$request.post('/comment/add', {\n        content: this.commentContent,\n        fid: this.fid,\n        module: this.module\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.commentContent = '';\n          this.loadComment(); // 重新加载数据\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","props","fid","module","data","commentCount","commentContent","commentList","created","loadComment","methods","$request","get","params","then","res","handleShowshowReplyInput","item","$set","showReplyInput","addReplay","post","content","replyContent","rootId","pid","id","code","$message","success","add