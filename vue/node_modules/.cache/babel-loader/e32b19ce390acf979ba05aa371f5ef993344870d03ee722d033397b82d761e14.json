{"ast":null,"code":"import \"core-js/modules/es.array.unshift.js\";\nexport default {\n  data() {\n    return {\n      current: '全部博客',\n      //当前选中的分类名称\n      categoryList: [],\n      tableData: [],\n      // 所有的数据\n      pageNum: 1,\n      // 当前的页码\n      pageSize: 10,\n      // 每页显示的个数\n      total: 0,\n      topList: [],\n      showList: [],\n      lastIndex: 0,\n      topActivityList: []\n    };\n  },\n  mounted() {\n    this.load();\n    this.loadBlogs(1);\n    this.refreshTop();\n    this.loadTopActivity();\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    loadTopActivity() {\n      this.$request.get('/activity/selectTop').then(res => {\n        this.topActivityList = res.data || [];\n      });\n    },\n    refreshTop() {\n      this.$request.get('/blog/selectTop').then(res => {\n        this.topList = res.data || [];\n        //不超过20个\n        let i = 1;\n        // 所有的博客来个序号\n        this.topList.forEach(item => item.index = i++);\n        // 0  5  0\n\n        //翻页逻辑 最大20个\n        if (this.lastIndex === 20) {\n          this.lastIndex = 0;\n        }\n        //默认翻4页\n        //切割\n        this.showList = this.topList.slice(this.lastIndex, this.lastIndex + 5); // 0-5   5- 10  // 0-5\n        this.lastIndex += 5; // 5  10  5\n      });\n    },\n\n    selectCategory(categoryName) {\n      this.current = categoryName;\n      this.loadBlogs(1);\n    },\n    load() {\n      // 请求分类的数据\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n        // 在数组开头插入一个 全部博客\n        this.categoryList.unshift({\n          name: '全部博客'\n        });\n      });\n    },\n    loadBlogs(pageNum) {\n      if (pageNum) this.pageNum = pageNum;\n      this.$request.get('/blog/selectPage', {\n        params: {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          categoryName: this.current === '全部博客' ? null : this.current\n        }\n      }).then(res => {\n        this.tableData = res.data?.list;\n        this.total = res.data?.total;\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.loadBlogs(pageNum);\n    }\n  }\n};","map":{"version":3,"names":["data","current","categoryList","tableData","pageNum","pageSize","total","topList","showList","lastIndex","topActivityList","mounted","load","loadBlogs","refreshTop","loadTopActivity","methods","$request","get","then","res","i","forEach","item","index","slice","selectCategory","categoryName","unshift","name","params","list","handleCurrentChange"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n<!--    align-items: flex-start表面高度不一样-->\r\n    <div style=\"display: flex; align-items: flex-start; grid-gap: 10px\">\r\n<!--最左边的分类-->\r\n      <div style=\"width: 150px\" class=\"card\">\r\n<!--        如果item.name选定哪个就把哪个高亮-->\r\n        <div class=\"category-item\" :class=\"{ 'category-item-active': item.name === current }\"\r\n             v-for=\"item in categoryList\" :key=\"item.id\" @click=\"selectCategory(item.name)\">{{ item.name }}</div>\r\n<!--        @click=\"selectCategory(item.name)选择哪个-->\r\n      </div>\r\n\r\n<!--中间的内容-->\r\n      <div style=\"flex: 1;min-height: 80vh\"  class=\"card\">\r\n<!--有数据显示这个-->\r\n        <div class=\"blog-box\" v-for=\"item in tableData\" :key=\"item.id\" v-if=\"total > 0\">\r\n<!--          文字部分-->\r\n          <div style=\"flex: 1; width: 0\">\r\n<!--            最上面文字标题部分-->\r\n            <div style=\"font-size: 16px; font-weight: bold; margin-bottom: 10px\">{{ item.title }}</div>\r\n            <!--简介 标题部分-->\r\n<!--            字数调小一点-->\r\n            <div class=\"line1\" style=\"color: #666; margin-bottom: 10px; font-size: 13px\">{{ item.descr }}</div>\r\n<!--                最下层元素-->\r\n            <div style=\"display: flex\">\r\n              <!--            名称、浏览量、点赞-->\r\n              <div style=\"flex: 1; font-size: 13px\">\r\n                <span style=\"color: #666; margin-right: 20px\"><i class=\"el-icon-user\"></i> {{ item.userName }}</span>\r\n                <span style=\"color: #666; margin-right: 20px\"><i class=\"el-icon-eye\"></i> {{ item.readCount }}</span>\r\n                <span style=\"color: #666\"><i class=\"el-icon-like\"></i> {{ item.likesCount }}</span>\r\n              </div>\r\n<!--              两个标签-->\r\n              <div style=\"width: fit-content\">\r\n                <el-tag type=\"primary\" style=\"margin-right: 10px\">后端</el-tag>\r\n                <el-tag type=\"primary\">面试</el-tag>\r\n              </div>\r\n            </div>\r\n          </div>\r\n\r\n<!--          图片部分-->\r\n          <div style=\"width: 150px\">\r\n            <img style=\"width: 100%; height: 80px; border-radius: 5px\" :src=\"item.cover\" alt=\"\">\r\n          </div>\r\n        </div>\r\n<!--无数据显示这个-->\r\n        <div v-if=\"total === 0\" style=\"padding: 20px 0; text-align: center; font-size: 16px; color: #666\">暂无数据</div>\r\n\r\n<!--        分页模块-->\r\n        <div style=\"margin-top: 10px\" v-if=\"total\">\r\n          <el-pagination\r\n              background\r\n              @current-change=\"handleCurrentChange\"\r\n              :current-page=\"pageNum\"\r\n              :page-sizes=\"[5, 10, 20]\"\r\n              :page-size=\"pageSize\"\r\n              layout=\"total, prev, pager, next\"\r\n              :total=\"total\">\r\n          </el-pagination>\r\n        </div>\r\n\r\n      </div>\r\n\r\n      <!--      最右边的的公告 榜单-->\r\n      <div style=\"width: 260px\">\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"font-size: 20px;font-weight: bold\">欢迎您! 😊</div>\r\n          <a href=\"/front/person\"><div style=\"color: #666\">写下博客记录美好的一天</div></a>\r\n        </div>\r\n\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"display: flex; align-items: center; padding-bottom: 10px; border-bottom: 1px solid #ddd\">\r\n            <div style=\"font-size: 20px; flex: 1\">文章榜单</div>\r\n            <div style=\"font-size: 12px; color: #666; cursor: pointer;\" @click=\"refreshTop\"><i class=\"el-icon-refresh\"></i> 换一换</div>\r\n          </div>\r\n          <div>\r\n            <div v-for=\"item in showList\" :key=\"item.id\" style=\"margin: 15px 0\" class=\"line1\">\r\n      <span style=\"width: 18px; display: inline-block; text-align: right; margin-right: 10px\">\r\n        <span style=\"color: orangered\" v-if=\"item.index === 1\">{{ item.index }}</span>\r\n        <span style=\"color: goldenrod\" v-else-if=\"item.index === 2\">{{ item.index }}</span>\r\n        <span style=\"color: dodgerblue\" v-else-if=\"item.index === 3\">{{ item.index }}</span>\r\n        <span style=\"color: #666\" v-else>{{ item.index }}</span>\r\n      </span>\r\n              <span style=\"color: #666;\">{{ item.title }}</span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div style=\"margin-bottom: 10px\">\r\n          <div v-for=\"item in topActivityList\" :key=\"item.id\" style=\"margin-bottom: 10px\">\r\n            <a :href=\"'/front/activityDetail?activityId=' + item.id\" target=\"_blank\"><img :src=\"item.cover\" alt=\"\" style=\"width: 100%; border-radius: 5px\"></a>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n\r\n  data() {\r\n    return {\r\n      current: '全部博客',  //当前选中的分类名称\r\n      categoryList: [],\r\n      tableData: [],  // 所有的数据\r\n      pageNum: 1,   // 当前的页码\r\n      pageSize: 10,  // 每页显示的个数\r\n      total: 0,\r\n      topList: [],\r\n      showList: [],\r\n      lastIndex: 0,\r\n      topActivityList: []\r\n    }\r\n  },\r\n  mounted() {\r\n    this.load()\r\n\r\n    this.loadBlogs(1)\r\n    this.refreshTop()\r\n    this.loadTopActivity()\r\n\r\n  },\r\n  // methods：本页面所有的点击事件或者其他函数定义区\r\n  methods: {\r\n    loadTopActivity() {\r\n      this.$request.get('/activity/selectTop').then(res => {\r\n        this.topActivityList = res.data || []\r\n      })\r\n    },\r\n    refreshTop() {\r\n      this.$request.get('/blog/selectTop').then(res => {\r\n        this.topList = res.data || []\r\n        //不超过20个\r\n        let i = 1\r\n        // 所有的博客来个序号\r\n        this.topList.forEach(item => item.index = i++)\r\n        // 0  5  0\r\n\r\n        //翻页逻辑 最大20个\r\n        if (this.lastIndex === 20) {\r\n          this.lastIndex = 0\r\n        }\r\n        //默认翻4页\r\n        //切割\r\n        this.showList = this.topList.slice(this.lastIndex, this.lastIndex+5)  // 0-5   5- 10  // 0-5\r\n        this.lastIndex += 5  // 5  10  5\r\n      })\r\n    },\r\n    selectCategory(categoryName) {\r\n      this.current = categoryName\r\n\r\n      this.loadBlogs(1)\r\n    },\r\n    load() {\r\n      // 请求分类的数据\r\n      this.$request.get('/category/selectAll').then(res => {\r\n        this.categoryList = res.data || []\r\n        // 在数组开头插入一个 全部博客\r\n        this.categoryList.unshift({ name: '全部博客' })\r\n      })\r\n    },\r\n    loadBlogs(pageNum) {\r\n\r\n      if (pageNum) this.pageNum = pageNum\r\n      this.$request.get('/blog/selectPage', {\r\n        params: {\r\n          pageNum: this.pageNum,\r\n          pageSize: this.pageSize,\r\n          categoryName: this.current === '全部博客' ? null : this.current,\r\n        }\r\n      }).then(res => {\r\n        this.tableData = res.data?.list\r\n        this.total = res.data?.total\r\n      })\r\n    },\r\n    handleCurrentChange(pageNum) {\r\n      this.loadBlogs(pageNum)\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.category-item {\r\n  /*第一个div*/\r\n  /*分开前两个个卡片*/\r\n  text-align: center;\r\n  padding: 10px 0;\r\n  font-size: 16px;\r\n  /*鼠标移入是一个小手*/\r\n  cursor: pointer;\r\n}\r\n.category-item-active {\r\n  /*左边全部博客的格式这是高亮样式*/\r\n  background-color: #1890ff;\r\n  color: #fff;\r\n  /*这是圆角格式*/\r\n  border-radius: 15px;\r\n}\r\n.line1 {\r\n  /*省略 仅一行展示*/\r\n  white-space: nowrap;\r\n  overflow: hidden;\r\n  text-overflow: ellipsis;\r\n}\r\n.blog-box {\r\n  display: flex;\r\n  /*左右间距*/\r\n  grid-gap: 15px;\r\n  /*上下间距为10px 左右间距为0*/\r\n  padding: 10px 0;\r\n  border-bottom: 1px solid #ddd;\r\n}\r\n/*第一个元素*/\r\n.blog-box:first-child {\r\n  padding-top: 0;\r\n}\r\n</style>\r\n"],"mappings":";AAqGA;EAEAA,KAAA;IACA;MACAC,OAAA;MAAA;MACAC,YAAA;MACAC,SAAA;MAAA;MACAC,OAAA;MAAA;MACAC,QAAA;MAAA;MACAC,KAAA;MACAC,OAAA;MACAC,QAAA;MACAC,SAAA;MACAC,eAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;IAEA,KAAAC,SAAA;IACA,KAAAC,UAAA;IACA,KAAAC,eAAA;EAEA;EACA;EACAC,OAAA;IACAD,gBAAA;MACA,KAAAE,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAV,eAAA,GAAAU,GAAA,CAAApB,IAAA;MACA;IACA;IACAc,WAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,oBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAb,OAAA,GAAAa,GAAA,CAAApB,IAAA;QACA;QACA,IAAAqB,CAAA;QACA;QACA,KAAAd,OAAA,CAAAe,OAAA,CAAAC,IAAA,IAAAA,IAAA,CAAAC,KAAA,GAAAH,CAAA;QACA;;QAEA;QACA,SAAAZ,SAAA;UACA,KAAAA,SAAA;QACA;QACA;QACA;QACA,KAAAD,QAAA,QAAAD,OAAA,CAAAkB,KAAA,MAAAhB,SAAA,OAAAA,SAAA;QACA,KAAAA,SAAA;MACA;IACA;;IACAiB,eAAAC,YAAA;MACA,KAAA1B,OAAA,GAAA0B,YAAA;MAEA,KAAAd,SAAA;IACA;IACAD,KAAA;MACA;MACA,KAAAK,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAlB,YAAA,GAAAkB,GAAA,CAAApB,IAAA;QACA;QACA,KAAAE,YAAA,CAAA0B,OAAA;UAAAC,IAAA;QAAA;MACA;IACA;IACAhB,UAAAT,OAAA;MAEA,IAAAA,OAAA,OAAAA,OAAA,GAAAA,OAAA;MACA,KAAAa,QAAA,CAAAC,GAAA;QACAY,MAAA;UACA1B,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAsB,YAAA,OAAA1B,OAAA,0BAAAA;QACA;MACA,GAAAkB,IAAA,CAAAC,GAAA;QACA,KAAAjB,SAAA,GAAAiB,GAAA,CAAApB,IAAA,EAAA+B,IAAA;QACA,KAAAzB,KAAA,GAAAc,GAAA,CAAApB,IAAA,EAAAM,KAAA;MACA;IACA;IACA0B,oBAAA5B,OAAA;MACA,KAAAS,SAAA,CAAAT,OAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}